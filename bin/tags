#! /home/orange/pyenv/bin/python -B

import argparse
from toloveyou import *

@with_cursor
def main(cursor=None):
    parser = argparse.ArgumentParser()
    parser = argparse.ArgumentParser(prefix_chars='+')
    parser.add_argument('tags', nargs='*') 
    args = parser.parse_args()

    stdin = parse_stdin()

    if not args.tags:
        output = subprocess.run(
            ['rofi', '-dmenu', '-p', 'tags'],
            input='',
            text=True, 
            capture_output=True,
        ).stdout.strip()
        
        if not output: # pressed esc usually
            sys.exit()

        args.tags = output.strip().lower().split(' ')
    
    for entry, attrs in parse(stdin, cursor=cursor):
        attrs.setdefault('tags', [])
        tags = set(attrs['tags'])
        
        for tag in args.tags: 
            tag = tag.strip().lower()
            remove = tag.startswith('-')

            if remove:
                tags.discard(tag[1:])
            else:
                tags.add(tag)

        attrs['tags'] = list(tags)
        save_attrs(entry, attrs, cursor=cursor)
        
if __name__ == '__main__':
    main()
